<%=@node[:environment][:framework_env]%>:
  adapter:   <%= @dbtype %>
  database:  <%= @dbname %>
  username:  <%= @dbuser %>
  password:  <%= @dbpass %>
  host:      <%= @dbhost %>
  encoding: utf8
  reconnect: true

<% @slaves.each_with_index do |slave,i| %>
<%= i == 0 ? "slave" : "slave_#{i}" %>:
  adapter:   <%= @dbtype %>
  database:  <%= @dbname %>
  username:  <%= @dbuser %>
  password:  <%= @dbpass %>
  host:      <%= slave %>
  encoding: utf8
  reconnect: true
<% end %>
